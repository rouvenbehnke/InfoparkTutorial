!!! 5

%html
  %head
    %meta{charset: 'utf-8'}
    %meta{:'http-equiv' => 'X-UA-Compatible', content: 'IE=Edge,chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}

    = render_cell(:title, :show, @obj)

    = csrf_meta_tags

    = rails_connector_header_tags

    / HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag('http://html5shim.googlecode.com/svn/trunk/html5.js')

    = stylesheet_link_tag('application', media: 'all')
    = stylesheet_link_tag('editing', media: 'all') if inplace_editing_allowed?

    %link{href: '/favicon.ico', rel: 'shortcut icon'}

  %body{body_attributes(@obj)}
    = render_cell(:menu_bar, :show)

    .container
      = render_cell(:main_navigation, :show, @obj)

      .content
        .row
          .col-md-12
            = render_cell(:flash, :messages, flash)

          = yield

      = render_cell(:footer, :show, @obj)

    = javascript_include_tag('application')
    = javascript_include_tag('editing') if inplace_editing_allowed?


    = rails_connector_after_content_tags
