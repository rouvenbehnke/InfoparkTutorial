.navbar.navbar-default{role: 'navigation'}
  .container
    .navbar-header
      %button.navbar-toggle{type: 'button', data: { toggle: 'collapse', target: '.navbar-collapse' }}
        %span.sr-only
          = t('navigation.toggle')

        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to(cms_path(@root), class: 'navbar-brand') do
        = @root.menu_title

    .navbar-collapse.collapse
      = render_cell(:search, :form, @page, params[:q])

      = cms_tag_list(:ul, @root, :toclist, class: 'nav navbar-nav', id: 'main_nav') do |list, obj|
        - list.tag(:li, id: "main_nav_page_#{obj.id}", data: { path: obj.path }) do
          = link_to(cms_path(obj)) do
            = obj.menu_title
